<table class="table">
  <thead>
    <tr>
      <th>#</th>
      <th>Event</th>
      <th>User</th>
      <th>Referred on</th>
    </tr>
  </thead>
  <tbody>
    <% counter = 0 %>
    <% referred_users.each do |r| %>
      <% counter += 1 %>
      <tr>
        <th scope="row"><%= counter %></th>
        <td> <%= r.hackathon.title %> </td>
        <td> <%= r.attendee.email  %> </td>
        <td> <%= r.created_at %> </td>
      </tr>
    <% end %>
  </tbody>
</table>
